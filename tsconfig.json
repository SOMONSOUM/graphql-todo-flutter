{
  "compilerOptions": {
    "target": "es2015",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": ["src", "src/database/migrations"],
  "typeAcquisition": {
    "include": ["jest"]
  },
  "exclude": ["node_modules"]
}